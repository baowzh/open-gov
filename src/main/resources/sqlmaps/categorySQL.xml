<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.asiainfo.portal.modules.category.model.Category">
	
	<select id="getCategorys" resultType="com.asiainfo.portal.modules.category.model.Category">
	   select id,name,parent_id as parentId from td_category where  parent_id is null
	</select>
	
	<select id="getSubCategorys"  parameterType="java.lang.Integer" resultType="com.asiainfo.portal.modules.category.model.Category">
	   select id,name,parent_id as parentId from td_category where  parent_id =#{_parameter,jdbcType=INTEGER}
	</select>
</mapper>